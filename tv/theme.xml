<theme>
    <formatVersion>7</formatVersion>
    <include>./../pixel.xml</include>
	
	<variables>
		<themeColor>FF0000</themeColor>
		<selectColor>ff0000</selectColor>
	</variables>

	<view name="system">

		<image name="background" extra="true">
			<color>${themeColor}</color>
		</image>
		
		<image name="console_overlay" extra="true">
			<path>./console.png</path>
		</image>
		
		<image name="logo">
			<path>./logo.png</path>
        </image>
	
	</view>

	<view name="basic">

		<image name="logo">
			<path>./logo.png</path>
		</image>
		
		<image name="background" extra="true">
			<color>${themeColor}</color>
		</image>

		<image name="Border Overlay" extra="true">
			<path>./../art/border_simple.png</path>
		</image>		
	
		<textlist name="gamelist">
			<selectedColor>${selectColor}</selectedColor>
		</textlist>
		
	</view>

	<view name="detailed, video">
	
		<image name="logo">
			<path>./logo.png</path>
		</image>
		
		<image name="background" extra="true">
			<color>${themeColor}</color>
		</image>

		<textlist name="gamelist">
			<selectedColor>${selectColor}</selectedColor>
		</textlist>
		


		
		<text name="System_Desc" extra="true">
			<pos>1 1</pos>
		</text>	
		
		
		<text name="md_developer">
			<color>ffffff</color>
			<pos>1 1</pos>
			<forceUppercase>0</forceUppercase>
			<fontPath>./../art/font.ttf</fontPath>
			<fontSize>0.037</fontSize>
			<size>0.350 0.035</size>
		</text>		
		
		<datetime name="md_releasedate">
			<color>ffffff</color>
			<pos>1 1</pos>
			<forceUppercase>0</forceUppercase>
			<fontPath>./../art/font.ttf</fontPath>
			<fontSize>0.037</fontSize>
			<size>0.220 0.035</size>
		</datetime>

		<text name="md_genre">
			<color>ffffff</color>
			<pos>1 1</pos>
			<forceUppercase>0</forceUppercase>
			<fontPath>./../art/font.ttf</fontPath>
			<fontSize>0.037</fontSize>
			<size>0.350 0.035</size>
		</text>
		
		
		
		<rating name="md_rating">
			<pos>1 1</pos>
			<size>0.200 0.050</size>
			<filledPath>./../art/star_filled.svg</filledPath>
			<unfilledPath>./../art/star_empty.svg</unfilledPath>
		</rating>


		<text name="md_description">
			<color>ffffff</color>
			<pos>0.569 0.677</pos>
			<size>0.380 0.204</size>
			<forceUppercase>0</forceUppercase>
			<fontPath>./../art/font.ttf</fontPath>
			<alignment>center</alignment>
			<fontSize>0.035</fontSize>
		</text>


	</view>
	
</theme>